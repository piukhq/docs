server {
    listen      80;
    server_name localhost;

    location / {
        root    /usr/share/nginx/html;
        index   ${DEPLOYED_ENV}.html;
    }

    location /bpl {
        root    /usr/share/nginx/html;
        index   /bpl/index.html;
    }

    location /portal {
        root    /usr/share/nginx/html;
        index   /portal/index.html;
    }

    location /healthz {
        return  204;
    }
}
